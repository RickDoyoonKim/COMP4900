@using ImpactWebsite.Models.BillingModels
@model ImpactWebsite.Models.BillingModels.BillingAddress

@{
    ViewData["Title"] = "BillingAddress";
}

<h3><i class="fa fa-book"></i>  Billing Address</h3>
<br />
@if (Model != null)
{

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BillingName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressLine1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressLine2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
        </tr>              
        <tr>
            <td>
                @Html.DisplayFor(modelItem => modelItem.BillingName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.AddressLine1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.AddressLine2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.Country)
            </td>
        </tr>
        
    </table>
    <p><a href="@Url.Action("BillingAddress")" class="impact-btn">Edit billing address</a></p>
}
else
{
    <p>There is no billing address yet. </p>
    <br />
    <p><a href="@Url.Action("BillingAddress")" class="impact-btn">Add your billing address</a></p>
}

