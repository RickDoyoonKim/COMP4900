
@{
    ViewData["Title"] = "NewOrder";
}

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<section style="width: 70%; margin-top: 100px; margin-left: 20%;">
    <div style="width: 250px; float: left; text-align: center;">
        <a id="FileUpload" style="display:block; width:250px; height:100px; padding: 30px;" class="btn-lg btn-primary">
            <i class="glyphicon glyphicon-align-center"></i>Input Investment Information
        </a>
    </div>
    <div style="width: 250px; margin-left: 50%; text-align: center;">
        <a id="Charge" asp-controller="Charge" asp-action="Index" asp-route-id="@ViewData["TotalAmount"]" style="display: block; width: 250px; height: 100px; padding: 30px;" class="btn-lg btn-primary">
            <i class="glyphicon glyphicon-align-center"></i> Request & Payment
        </a>
    </div>

</section>

<div id="AddUserForm"></div>

@section scripts
    {
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.js"></script>
    <link rel="stylesheet" href="~/lib/jquery-ui/themes/base/jquery-ui.css" />

    <script type="text/javascript">
        $('#FileUpload').on('click', function () {

            $("#AddUserForm").dialog({
            type: 'GET',
            autoOpen: true,
            position: { my: "top", at: "top+150", of: window },
            width: 600,
            height: 200,
            resizable: false,
            title: 'Upload Files',
            modal: true,
            open: function () {
                $(this).load('@Url.Action("FileUpdaload", "Order")');
            },
        });
        return false;
    });
    </script>
    }