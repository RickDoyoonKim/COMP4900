
@{
    ViewData["Title"] = "RegisterLogin";
}


@if (ViewData["checkUser"].Equals("NeedRegister"))
{
    <p>Please Register to Request and Pay</p>
    <div style="width: 250px; margin: auto; margin-top: 20%; text-align: center;">
        <a id="Register" style="display: block; width: 150px; height: 80px; padding: 30px;" class="btn-lg btn-primary">
            <i class="glyphicon glyphicon-align-center"></i> Register
        </a>
    </div>
}
else if (ViewData["checkUser"].Equals("NeedLogin"))
{
    <p>Please Login to Request and Pay</p>
    <div style="width: 250px; margin: auto; margin-top: 20%; text-align: center;">
        <a id="Login" style="display: block; width: 150px; height: 80px; padding: 30px;" class="btn-lg btn-primary">
            <i class="glyphicon glyphicon-align-center"></i> Login
        </a>
    </div>
}

<div id="AddUserForm"></div>

@section scripts
    {
    <script type="text/javascript" src="../../lib/jquery/dist/jquery.js"></script>
    <script src="../../lib/jquery-ui/jquery-ui.js"></script>
    <link rel="stylesheet" href="../../lib/jquery-ui/themes/base/jquery-ui.css" />

    <script type="text/javascript">
        $('#Register').on('click', function () {

            $("#AddUserForm").dialog({
            type: 'GET',
            autoOpen: true,
            position: { my: "top", at: "top+150", of: window },
            width: 600,
            height: 600,
            resizable: false,
            title: 'Register',
            modal: true,
            open: function () {
                $(this).load('@Url.Action("PartialRegister", "Order")');
            },
        });
        return false;
    });
    </script>

    <script type="text/javascript">
         $('#Login').on('click', function () {

            $("#AddUserForm").dialog({
            type: 'GET',
            autoOpen: true,
            position: { my: "top", at: "top+150", of: window },
            width: 600,
            height: 600,
            resizable: false,
            title: 'Login',
            modal: true,
            open: function () {
                $(this).load('@Url.Action("PartialLogin", "Order")');
            },
        });
    return false;
    });
    </script>
}